{
  "compilerOptions": {
    "removeComments": true,
    "allowUnreachableCode": false,

    /*Strict Checks*/
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,

    /* Additional Checks */
    //"noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./**/*.ts"]
}
